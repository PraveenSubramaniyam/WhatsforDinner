<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.praveensubramaniyam.whatsfordinner">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NewDishActivity"></activity>
        <activity android:name=".SimpleActivity"></activity>
        <activity android:name=".MealsScreenMainActivity"></activity>
        <activity android:name=".MealsScreenSelectRecipes"></activity>
        <activity android:name=".NewDishEditActivity"></activity>
        <activity
            android:name=".FragmentLayout">
        </activity>
        <activity android:name=".FragmentLayout$DetailsActivity" />
    </application>

</manifest>